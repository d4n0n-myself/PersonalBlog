@page

<form id="f1" method="post" enctype="multipart/form-data" class="form-group" asp-action="Add" asp-controller="Posts">
    <div class="list-group-item">
        <label for="title">Title</label><br/>
        <input type="text" id="title" name="title" value="title"/>
    </div>  
    <div class="list-group-item">
        <label for="main-text">Header</label><br/>
        <textarea style="width: 100%" name=main-text id=main-text rows=4> </textarea>
    </div>
    <div class="list-group-item">
        <label for="text">Text</label><br/>
        <textarea style="width: 100%" name=text id=text rows=10> </textarea>
    </div>
    <div class="list-group-item">
        <input type="submit" id="submit" value="Submit"/>
    </div>
</form>